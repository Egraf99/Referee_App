<AppScreen>:
    MDBoxLayout:
        orientation: 'vertical'
        MDToolbar:
            id: toolbar
            title: 'Third Referee'
            type: 'top'
            md_bg_color: app.theme_cls.primary_color

        MDBottomNavigation:
            panel_color: .5, .5, .5, 1
            first_widget: True

            MDBottomNavigationItem:
                name: 'main'
                text: 'Games'
                icon: 'whistle'


                BoxLayout:
                    id: games_box

                MDFloatingActionButton:
                    id: button_plus
                    rotation_root_button: True
                    pos_hint: {'center_x': .9, 'center_y': .18}
                    icon: 'plus'
                    md_bg_color: app.theme_cls.primary_color
                    on_press: root.add_float_button_callback()

<TextField>:
    on_focus: if self.focus: root.on_focus_()
    on_cursor: root.on_cursor_()

