<GameScreen>:
    games_layout: games_layout

    MDBoxLayout:
        orientation: 'vertical'
        MDToolbar:
            title: 'App'
            type: 'top'

        MDBottomNavigation:
            panel_color: .5, .5, .5, 1
            first_widget: True

            MDBottomNavigationItem:
                id: games_screen
                name: 'main'
                text: 'Games'
                icon: 'whistle'
#                on_tab_press: root.main_page()

                BoxLayout:
                    id: games_layout

                MDFloatingActionButtonSpeedDial:
                    rotation_root_button: True
                    callback: root.callback
                    data: {'Stadium': 'stadium-variant','Referee': 'account-plus-outline','Game': 'cookie-plus-outline'}
                    icon: 'plus'
                    md_bg_color: app.theme_cls.primary_color

            MDBottomNavigationItem:
                name: 'finance'
                text: 'Finance'
                icon: 'cash-usd-outline'

                MDLabel:
                    text: 'Finance'
                    halign: 'center'



            MDBottomNavigationItem:
                name: 'comming'
                text: 'python'
                icon: 'language-python'

                MDLabel:
                    text: 'Comming soon'
                    halign: 'center'

<Button_cancel>:
    text: "CANCEL"

<Dialog>:
    list_buttons: self.take_button()
    title: "Add game"
    type: "custom"
    content_cls: self.take_textfield
    buttons: self.but


<TextField@ScrollView>:
    size_hint_y: None
    height: "350dp"
    BoxLayout:
        orientation: "vertical"
        size_hint_y: None
        height: "320dp"

        MDTextField:
            hint_text: "City"

        MDTextField:
            hint_text: "Street"

        MDTextField:
            hint_text: "Street"

        MDTextField:
            hint_text: "Street"

        MDTextField:
            hint_text: "Street"

        MDTextField:
            hint_text: "Street"


<MatchTable>:
    cell_size: 30
    use_pagination: False
    check: True
    column_data:[('Дата', 28), ('Время', 12), ('Лига', self.cell_size),('Стадион', self.cell_size),('Хозяева', self.cell_size),('Гости', self.cell_size),('Фамилия', self.cell_size)]
    row_data: root.take_games