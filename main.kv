<AppScreen>:
    games_layout: games_layout

    MDBoxLayout:
        orientation: 'vertical'
        MDToolbar:
            title: 'App'
            type: 'top'
            right_action_items: [["dots-vertical", lambda x: root.menu_settings()]]

        MDBottomNavigation:
            panel_color: .5, .5, .5, 1
            first_widget: True

            MDBottomNavigationItem:
                id: games_screen
                name: 'main'
                text: 'Games'
                icon: 'whistle'


                BoxLayout:
                    id: games_layout

                MDFloatingActionButton:
                    rotation_root_button: True
                    pos_hint: {'center_x': .93, 'center_y': .1}
                    icon: 'plus'
                    md_bg_color: app.theme_cls.primary_color
                    on_press: root.add_button_callback()

            MDBottomNavigationItem:
                name: 'finance'
                text: 'Finance'
                icon: 'cash-usd-outline'

                MDLabel:
                    text: 'Finance'
                    halign: 'center'



            MDBottomNavigationItem:
                name: 'coming'
                text: 'python'
                icon: 'language-python'

                MDLabel:
                    text: 'Coming soon'
                    halign: 'center'

<TextField>:
    on_focus: if self.focus: root.on_focus_()
    on_cursor: root.on_cursor_()


<AddDataContent>:
    size_hint_y: None
    height: self._get_height()

    MDBoxLayout:
        id: box
        spacing: "10dp"
        orientation: "vertical"
        size_hint_y: None
        height: root._get_box_height()

