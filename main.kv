<GameScreen>:
    games_layout: games_layout

    MDBoxLayout:
        orientation: 'vertical'
        MDToolbar:
            title: 'App'
            type: 'top'

        MDBottomNavigation:
            panel_color: .5, .5, .5, 1
            first_widget: True

            MDBottomNavigationItem:
                id: games_screen
                name: 'main'
                text: 'Games'
                icon: 'whistle'


                BoxLayout:
                    id: games_layout

                MDFloatingActionButtonSpeedDial:
                    rotation_root_button: True
                    callback: root.add_button_callback
                    data:
                        {'Stadium': 'stadium-variant',
                        'Referee': 'account-plus-outline',
                        'Game': 'cookie-plus-outline'}
                    icon: 'plus'
                    md_bg_color: app.theme_cls.primary_color

            MDBottomNavigationItem:
                name: 'finance'
                text: 'Finance'
                icon: 'cash-usd-outline'

                MDLabel:
                    text: 'Finance'
                    halign: 'center'



            MDBottomNavigationItem:
                name: 'coming'
                text: 'python'
                icon: 'language-python'

                MDLabel:
                    text: 'Coming soon'
                    halign: 'center'

<TextField>:
    on_focus: if self.focus: root.on_focus_()
    on_cursor: root.on_cursor_()


<AddDataContent>:
    size_hint_y: None
    height: self._get_height()

    MDBoxLayout:
        id: box
        orientation: "vertical"
        size_hint_y: None
        height: root._get_box_height()

<MenuHeader>:
    orientation: "vertical"
    adaptive_size: True
    padding: "4dp"

    MDBoxLayout:
        spacing: "12dp"
        adaptive_size: True

        OneLineListItem:
            id: icon
#            icon: "gesture-tap-button"
            pos_hint: {"center_y": .5}
            on_release: root.print
            on_press: root.print
            on_touch_down: root.print
            color: [255,255,225,1]

        MDLabel:
            text: "Actions"
            adaptive_size: True
            pos_hint: {"center_y": .5}


