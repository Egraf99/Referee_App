<GameScreen>:
    top_bn: top_bn
    label: label
    content_box: content_box
#    buttons: [bn_appointment, bn_main, bn_finance]
    BoxLayout:
        orientation: 'vertical'


        BoxLayout:
            size_hint_y: .1
            Button:
                id: top_bn
                text: 'Press me'

        BoxLayout:
            id: content_box
            Image:
                source: 'image/second.jpg'
            Label:
                id: label
                text: 'Main field'

        MDBottomNavigation:
            panel_color: .2, .2, .2, .1

            MDBottomNavigationItem:
                name: 'main'
                text: 'Game'
                icon: 'language-python'

                MDLabel:
                    text: 'Game'
                    halign: 'center'

            MDBottomNavigationItem:
                name: 'screen2'
                text: 'Finance'
                icon: 'language-python'

                MDLabel:
                    text: 'Finance'
                    halign: 'center'

            MDBottomNavigationItem:
                name: 'scree 3'
                text: 'JS'
                icon: 'language-javascript'

                MDLabel:
                    text: 'JS'
                    halign: 'center'


