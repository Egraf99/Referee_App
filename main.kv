<GameScreen>:
    games_layout: games_layout

    MDBoxLayout:
        orientation: 'vertical'
        MDToolbar:
            title: 'App'
            type: 'top'

        MDBottomNavigation:
            panel_color: .5, .5, .5, 1
            first_widget: True

            MDBottomNavigationItem:
                id: games_screen
                name: 'main'
                text: 'Games'
                icon: 'whistle'


                BoxLayout:
                    id: games_layout

                MDFloatingActionButtonSpeedDial:
                    rotation_root_button: True
                    callback: root.add_button_callback
                    data:
                        {'Stadium': 'stadium-variant',
                        'Referee': 'account-plus-outline',
                        'Game': 'cookie-plus-outline'}
                    icon: 'plus'
                    md_bg_color: app.theme_cls.primary_color

            MDBottomNavigationItem:
                name: 'finance'
                text: 'Finance'
                icon: 'cash-usd-outline'

                MDLabel:
                    text: 'Finance'
                    halign: 'center'



            MDBottomNavigationItem:
                name: 'comming'
                text: 'python'
                icon: 'language-python'

                MDLabel:
                    text: 'Comming soon'
                    halign: 'center'

<TextField>:
    on_focus: root.check_focus()
    on_cursor: root.on_cursor_()


<Content>:
    size_hint_y: None

    BoxLayout:
        id: box
        orientation: "vertical"
        size_hint_y: None
