<GameScreen>:
    games_layout: games_layout

    MDBoxLayout:
        orientation: 'vertical'

        MDToolbar:
            title: 'App'
            type: 'top'

        MDBottomNavigation:
            panel_color: .5, .5, .5, 1
            first_widget: True

            MDBottomNavigationItem:
                id: games_screen
                name: 'main'
                text: 'Games'
                icon: 'whistle'
                on_tab_press: root.main_page()

                BoxLayout:
                    id: games_layout

                MDFloatingActionButtonSpeedDial:
                    rotation_root_button: True
                    callback: root.callback
                    data: {'Python': 'language-python', 'PHP': 'language-php','C++': 'language-cpp',}
                    icon: 'plus'
                    md_bg_color: app.theme_cls.primary_color

            MDBottomNavigationItem:
                name: 'finance'
                text: 'Finance'
                icon: 'cash-usd-outline'

                MDLabel:
                    text: 'Finance'
                    halign: 'center'



            MDBottomNavigationItem:
                name: 'comming'
                text: 'python'
                icon: 'language-python'

                MDLabel:
                    text: 'Comming soon'
                    halign: 'center'


<Content>:
    size_hint_y: None
    size: (root.width, Window.height * 0.8)

    BoxLayout:
        orientation: "vertical"
        size_hint_y: None
        height: Window.height * 0.79
        MDTextField:
            hint_text: "Date"
            helper_text: "This will disappear when you click off"
            helper_text_mode: "persistent"

        MDTextField:
            hint_text: "Time"

        MDTextField:
            hint_text: "Some"

        MDTextField:
            hint_text: "Some"

        MDTextField:
            hint_text: "Some"

        MDTextField:
            hint_text: "Some"

        MDTextField:
            hint_text: "Some"