<GameScreen>:
    top_bn: top_bn
    label: label
    content_box: content_box
    buttons: [bn_appointment, bn_main, bn_finance]
    BoxLayout:
        orientation: 'vertical'


        BoxLayout:
            size_hint_y: .1
            Button:
                id: top_bn
                text: 'Press me'

        BoxLayout:
            id: content_box
            Image:
                source: 'image/second.jpg'
            Label:
                id: label
                text: 'Main field'


        BoxLayout:
            size_hint_y: .1
            ToggleButton:
                id: bn_finance
                text: 'finance'
                group: 'menu'
                on_press: root.main_page(self)

            ToggleButton:
                id: bn_main
                text: 'main'
                group: 'menu'
                state: 'down'
                on_press: root.add_label(self)


            ToggleButton:
                id: bn_appointment
                text: 'appointment'
                group: 'menu'
                on_press: root.change_label(self, 'app')


