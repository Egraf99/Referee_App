<AppScreen>:
    MDBoxLayout:
        orientation: 'vertical'
        MDToolbar:
            title: 'Third Referee'
            type: 'top'
            md_bg_color: app.theme_cls.primary_color
            right_action_items: [["dots-vertical", lambda x: root.menu_settings()]]

        MDBottomNavigation:
            panel_color: .5, .5, .5, 1
            first_widget: True

            MDBottomNavigationItem:
                name: 'main'
                text: 'Games'
                icon: 'whistle'


                BoxLayout:
                    id: games_box

                MDFloatingActionButton:
                    rotation_root_button: True
                    pos_hint: {'center_x': .9, 'center_y': .1}
                    icon: 'plus'
                    md_bg_color: app.theme_cls.primary_color
                    on_press: root.add_float_button_callback()

            MDBottomNavigationItem:
                name: 'finance'
                text: 'Finance'
                icon: 'cash-usd-outline'

                MDLabel:
                    text: 'Finance'
                    halign: 'center'



            MDBottomNavigationItem:
                name: 'coming'
                text: 'python'
                icon: 'language-python'

                MDLabel:
                    text: 'Coming soon'
                    halign: 'center'

<TextField>:
    on_focus: if self.focus: root.on_focus_()
    on_cursor: root.on_cursor_()

