<GameScreen>:
    games_layout: games_layout

    MDBoxLayout:
        orientation: 'vertical'
        MDToolbar:
            title: 'App'
            type: 'top'

        MDBottomNavigation:
            panel_color: .5, .5, .5, 1
            first_widget: True

            MDBottomNavigationItem:
                id: games_screen
                name: 'main'
                text: 'Games'
                icon: 'whistle'


                BoxLayout:
                    id: games_layout

                MDFloatingActionButtonSpeedDial:
                    rotation_root_button: True
                    callback: root.add_button_callback
                    data:
                        {'Stadium': 'stadium-variant',
                        'Referee': 'account-plus-outline',
                        'Game': 'cookie-plus-outline'}
                    icon: 'plus'
                    md_bg_color: app.theme_cls.primary_color

            MDBottomNavigationItem:
                name: 'finance'
                text: 'Finance'
                icon: 'cash-usd-outline'

                MDLabel:
                    text: 'Finance'
                    halign: 'center'



            MDBottomNavigationItem:
                name: 'comming'
                text: 'python'
                icon: 'language-python'

                MDLabel:
                    text: 'Comming soon'
                    halign: 'center'

<TextField>:
    on_focus: root.on_focus_()
    on_cursor: root.on_cursor_()
    on_text_validate: root.enter_press()

<AddMatch>:
    size_hint_y: None
    height: "350dp"
    BoxLayout:
        id: box
        orientation: "vertical"
        size_hint_y: None
        height: "480dp"


<MatchTable>:
    cell_size: 30
    use_pagination: False
    check: True
    column_data:
        [('Дата', 28),
        ('Время', 12),
        ('Лига', self.cell_size),
        ('Стадион', self.cell_size),
        ('Хозяева', self.cell_size),
        ('Гости', self.cell_size),
        ('Фамилия', self.cell_size)]
    row_data: root.take_games